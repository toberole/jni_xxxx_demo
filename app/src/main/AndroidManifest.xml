<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xiaoge.org">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.demo.MultiProcessActivity2"
            android:process="com.xiaoge.org.remote" />
        <activity
            android:name=".activity.demo.MultiProcessActivity"
            android:process=":remote" />
        <activity
            android:name=".activity.demo.LifeActivity_B"
            android:configChanges="orientation" />
        <activity android:name=".activity.demo.LifeActivity" />
        <activity android:name=".activity.CustomSurfaceViewActivity" />
        <activity android:name=".activity.TestServiceActivity" />

        <service
            android:name=".service.MyService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".activity.ServiceActivity" />
        <activity android:name=".activity.DrawActivity" />
        <activity android:name=".activity.ConstraintlayoutActivity" />
        <activity android:name=".activity.View_PathActivity" />
        <activity android:name=".activity.SinLineViewActivity" />
        <activity android:name=".activity.VoiceLineViewActivity" />
        <activity android:name=".activity.ScrollRefreshView_XXActivity" />
        <activity
            android:name=".activity.A_SplashActivity"
            android:hardwareAccelerated="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="@string/file_provider_authority"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>
    </application>

</manifest>