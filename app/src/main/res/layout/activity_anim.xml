<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="50dp"
    android:orientation="vertical"
    tools:context="com.xiaoge.org.activity.demo.AnimActivity">

    <TextView
        android:id="@+id/tv_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:padding="5dp"
        android:text="move tetx" />

    <Button
        android:id="@+id/btn_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="btn_scroll" />

    <Button
        android:id="@+id/btn_translationX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="btn_translationX" />

    <Button
        android:id="@+id/btn_change_param"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="btn_change_param" />

    <Button
        android:id="@+id/btn_ValueAnimator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="btn_ValueAnimator" />


</LinearLayout>
